/* pages/recommend/recommend.wxss */
.recommend {
  width: 100%;
  /* background: url('https://qizhiniao-dev.oss-cn-beijing.aliyuncs.com/img/e091bb55fc474263a654670571b73487')no-repeat; */
  background-size: 100% 100%;
}

.banner{
  width:100%;
}

.recommend .imageTop {
  width: 100%;
}

.formData {
  width: 100%;
  background: #fff;
  border-radius: 30rpx;
  padding-left: 30rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
}

.formData .formList {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 36rpx;
  box-sizing: border-box;
  border-bottom:2rpx solid #EEEEEE;
}

.formData .formList .formLeft {
  width: 30%;
  float: left;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #333;
}

.formData .formList .formRight {
  width: 70%;
  float: left;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #333;
}

.inpRight {
  width: 100%;
  height: 100rpx;
  text-align: right;
}

.inpRightNo {
  width: 100%;
  height: 100rpx;
  text-align: right;
  color: #bbb;
}

.inpHover {
  color: #bbb;
}

.submit {
  width: calc(100% - 30rpx);
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  background: #fac844;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #fff;
  margin: 56rpx 0;
}

.text {
  width:90%;
  font-size: 26rpx;
  color: #eb9d3c;
  margin:auto;
}
