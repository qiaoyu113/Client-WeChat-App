/* pages/activity/activity.wxss */

page {
  width: 100%;
  height: 100%;
  background: #1c376c;
}

.activityContent {
  width: 100%;
  position: relative;
}

.activityContent image {
  width: 100%;
}

.btnSubmit {
  width: 92%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ffa000;
  border-radius: 10rpx;
  font-size: 34rpx;
  color: #fff;
  position: absolute;
  bottom: 30rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.hindBg {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background: rgba(0, 0, 0, 0.50);
}

