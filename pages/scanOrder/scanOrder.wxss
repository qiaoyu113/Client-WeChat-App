/* pages/scanOrder/scanOrder.wxss */

page {
  background: #f6f6f6;
}

.changeBox {
  width: 100%;
  background: #fff;
  margin-top: 4rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.changeBox .inpList {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-right: 30rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  overflow: hidden;
}

.changeBox .inpList2 {
  width: 100%;
  overflow: hidden;
  border-bottom: 1px solid #eee;
  padding: 15rpx 0;
  box-sizing: border-box;
}

.changeBox .inpList2 .buy_needs_name {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #333;
  float: left;
}

.changeBox .inpList2 .input2 {
  width: 100%;
  height: 60rpx;
  font-size: 32rpx;
}

.changeBox .inpList2 .placeholdColor2 {
  font-size: 30rpx;
}

.changeBox .inpList .buy_needs_name {
  width: 300rpx;
  font-size: 32rpx;
  color: #333;
  float: left;
}

.changeBox .inpList .buy_list_right_text {
  display: inline-block;
  font-size: 30rpx;
  color: #000;
  float: right;
  margin-left: 14rpx;
}

.changeBox .inpList .buy_needs_addtext {
  font-size: 30rpx;
  color: #000;
  display: inline-block;
  float: right;
}

.changeBox .inpList .icon_right {
  float: right;
  color: #c7c7cc;
  line-height: 94rpx;
  margin-left: 14rpx;
  display: inline-block;
}

.changeBox .inpList .icon_right .iconfont {
  font-size: 24rpx !important;
}

.changeBox .inpList .input {
  width: 350rpx;
  height: 100rpx;
  text-align: right;
  float: right;
  display: inline-block;
}

.placeholdColor {
  color: #7d7d7d !important;
}

.placeholdColor2 {
  color: #c7c7cc !important;
}

.value_right {
  float: right;
  font-size: 30rpx;
  color: #4a4a4a;
}

.title {
  font-size: 32rpx;
  color: #000;
}

.bottomBox {
  width: 100%;
  background: #fff;
  padding: 35rpx 0;
  margin: auto;
  box-sizing: border-box;
  text-align: center;
}

.bottomBox .orderTitle {
  font-size: 32rpx;
  color: #4a4a4a;
}

.bottomBox .orderVal {
  font-size: 20rpx;
  color: #838383;
  margin-top:10rpx;
}

.bottomBox .payNow {
  width: 280rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #ffa000;
  border-radius: 31.5rpx;
  color:#fff;
  margin: auto;
  margin-top:35rpx;
  font-size: 32rpx;
}

.upDateClass{
  line-height: 35rpx;
}

.loginNow{
  width: 280rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #07c160;
  border-radius: 31.5rpx;
  color:#fff;
  margin: 35rpx auto;
  font-size: 32rpx;
}

.login_text{
  font-size: 24rpx;
  color: #838383;
  margin-top:10rpx;
}