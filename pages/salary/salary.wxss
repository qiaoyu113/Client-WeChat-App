/* pages/salary/salary.wxss */

.salary {
  width: 100%;
  background: #f2f2f2;
}

.salaryDate {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  font-size: 32rpx;
  color: #333;
}

.salaryDate text {
  color: #c7c7cc;
  margin:0 50rpx;
}

.driverList {
  margin-top: 8rpx;
  background: #fff;
}

.driverList .title {
  font-size: 32rpx;
  color: #6cabf5;
  letter-spacing: 0;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
}

.title2 {
  font-size: 32rpx;
  color: #ffa000;
  letter-spacing: 0;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
}

.boxList {
  overflow: hidden;
}

.list {
  width: 100%;
  font-size: 30rpx;
  color: #4a4a4a;
  border-bottom: 1rpx solid #f2f2f2;
}

.listTop {
  width: 100%;
  overflow: hidden;
  padding: 0 50rpx;
  box-sizing: border-box;
}

.listTop .left {
  float: left;
  font-size: 28rpx;
  color: #4a4a4a;
}

.listTop .right {
  float: right;
  font-size: 28rpx;
  color: #4a4a4a;
}

.listBottom {
  width: 100%;
  padding: 10rpx 50rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.listBottom .left {
  float: left;
  font-size: 24rpx;
  color: #989fa8;
}

.listBottom .right {
  float: right;
  font-size: 24rpx;
  color: #989fa8;
}

.totalList {
  width: 100%;
  overflow: hidden;
  padding: 0 50rpx;
  box-sizing: border-box;
  height: 86rpx;
  line-height: 86rpx;
}

.totalList .left {
  float: left;
  font-size: 30rpx;
  color: #000;
}

.totalList .right {
  float: right;
  font-size: 30rpx;
  color: #000;
}

.totalList2 {
  width: 100%;
  overflow: hidden;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 8rpx;
  height: 86rpx;
  line-height: 86rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.totalList2 .left {
  float: left;
  font-size: 32rpx;
  color: #3acb8d;
}

.totalList2 .right {
  float: right;
  font-size: 32rpx;
  color: #3acb8d;
}

.submit {
  width: 92%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin: 60rpx auto 15rpx;
  background: #ffa000;
  border-radius: 10px;
  color: #fff;
  font-size: 34rpx;
}

.resolve {
  font-size: 30rpx;
  color: #9b9b9b;
  float: right;
  margin-right: 4%;
}
