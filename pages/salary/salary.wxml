<view class='salary'>
  <view class="salaryDate">
    <picker mode="date" fields="month" value="{{date}}" start="2016-01-01" end="{{endDate}}" bindchange="getDateTime">
      <view class="selectDate">
        <text class='icon-back margin_right_20'></text> {{dateNow}} <text class='icon-right margin_left_20'></text>
      </view>
    </picker>
  </view>
  <view class="driverList">
    <view class="title">司机收入</view>
    <view class='boxList'>
      <view class='list'>
        <view class="listTop">
          <view class="left">张三</view>
          <view class='right'>500.00元</view>
        </view>
        <view class="listBottom">
          <view class="left">订单号：123987476</view>
          <view class='right'>2019-08-01</view>
        </view>
      </view>
    </view>
    <view class='totalList'>
      <view class="left">收入合</view>
      <view class='right'>2000.00元</view>
    </view>
  </view>
  <view class="driverList">
    <view class="title2">扣款</view>
    <view class='boxList'>
      <view class='list'>
        <view class="listTop">
          <view class="left">张三</view>
          <view class='right'>保险扣款（5元）</view>
        </view>
        <view class="listBottom">
          <view class="left">订单号：123987476</view>
          <view class='right'>2019-08-01</view>
        </view>
      </view>
    </view>
    <view class='totalList'>
      <view class="left">扣款合</view>
      <view class='right'>-20.00元</view>
    </view>
  </view>
  <view class="totalList2">
    <view class="left">应收工资总额</view>
    <view class='right'>1990.00元</view>
  </view>
</view>
<view class='submit'>确认收入</view>
<view class="resolve" bindtap='talphone'>收入反馈?</view>