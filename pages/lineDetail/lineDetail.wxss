/* pages/lineDetail/lineDetail.wxss */

page {
  background: #edecec;
}

.lineDetail {
  width: 100%;
}

.imgSHow {
  width: 100%;
  height:350rpx;
}

.detailBox {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.boxCss {
  width: 100%;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.boxCss_top {
  width: 100%;
  overflow: hidden;
  border-bottom: 2rpx solid #f2f2f2;
}

.boxCss_top_left {
  width: calc(100% - 200rpx);
  line-height: 40rpx;
  float: left;
  font-size: 32rpx;
  color: #4a4a4a;
  font-weight: bold;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.boxCss_top_right {
  width: 200rpx;
  float: left;
  text-align: center;
  line-height: 80rpx;
  color: #7b7a7a;
}

.boxCss_center {
  width: 100%;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10rpx;
}

.boxCss_list {
  width: 100%;
  overflow: hidden;
  font-size: 30rpx;
  color: #4a4a4a;
  line-height: 43rpx;
}

.boxCss_list_left {
  width: 50%;
  float: left;
}

.boxCss_list_right {
  width: 50%;
  float: right;
  text-align: right;
}

.textarea {
  font-size: 26rpx;
  color: #9b9b9b;
}

.btnMent {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.btnMent .btnLeft {
  width: 50%;
  height: 98rpx;
  line-height: 98rpx;
  background: #fdeed7;
  box-shadow: 0 -1px 3px 0 rgba(0, 0, 0, 0.30);
  text-align: center;
  font-size: 36rpx;
  color: #4a4a4a;
  float: left;
}

.btnMent .btnRight {
  width: 50%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
  color: #4a4a4a;
  background: #fac844;
  box-shadow: 0 -1px 3px 0 rgba(0, 0, 0, 0.30);
  float: left;
}

.margin100 {
  margin-bottom: 98rpx;
}

/* 推荐有礼 */

.recommend {
  width: 92%;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  z-index: 200;
  padding: 30rpx 53rpx;
  box-sizing: border-box;
}

.close {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  color: #ccc;
  font-size: 40rpx;
}

.recommend .title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 40rpx;
  color: #333;
  margin-top: 40rpx;
}

.recommend .title text {
  color: #ec562d;
  margin-right: 20rpx;
}

.content {
  font-size: 30rpx;
  color: #4a4a4a;
  margin-top: 40rpx;
}

.contentList text {
  font-size: 30rpx;
  color: #f55e01;
}

.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fac844;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #4a4a4a;
  margin:25rpx 0;
}

.marginTop{
  margin-top:30rpx;
}

.recommendBg {
  width: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  z-index: 100;
  right: 0;
  background: rgba(0, 0, 0, 0.50);
}
